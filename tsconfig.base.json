{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@payload-crowdin-sync-nx/dev": ["dev/src/index.ts"],
      "@payload-crowdin-sync-nx/dev-alternative-config": [
        "dev-alternative-config/src/index.ts"
      ],
      "payload-crowdin-sync": ["plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
